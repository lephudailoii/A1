<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:layout_row="2"
    tools:context=".MainActivity"
    >

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carousel"
        android:layout_width="393dp"
        android:layout_height="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.synnapps.carouselview.CarouselView>

    <ImageButton
        android:id="@+id/imgbnthoc"
        android:layout_width="178dp"
        android:layout_height="169dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="16dp"
        android:background="@drawable/hoc"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnbienbao"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel">


    </ImageButton>

    <ImageButton
        android:id="@+id/thi"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="24dp"
        android:background="@drawable/thi"
        app:layout_constraintEnd_toStartOf="@+id/tracuu"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbnthoc">


    </ImageButton>

    <ImageButton
        android:id="@+id/tracuu"
        android:layout_width="180dp"
        android:layout_height="165dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/tracuuluat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnbienbao">


    </ImageButton>

    <ImageButton
        android:id="@+id/imgbtnbienbao"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bienbao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel">


    </ImageButton>

    <ImageButton
        android:id="@+id/btngiaxe"
        android:layout_width="405dp"
        android:layout_height="133dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tracuu"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/giaxe" />


</androidx.constraintlayout.widget.ConstraintLayout>